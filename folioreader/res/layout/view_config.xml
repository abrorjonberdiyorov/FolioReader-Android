<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_gravity="bottom">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_config_radio_group"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:text="@string/baskerville"
                    android:fontFamily="@font/baskerville_regular"
                    android:layout_height="wrap_content">

                </RadioButton>
                <RadioButton
                    android:id="@+id/rb2"
                    android:text="@string/bookerly"
                    android:fontFamily="@font/bookerly_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rb3"
                    android:text="@string/futura"
                    android:fontFamily="@font/futura_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb4"
                    android:text="@string/georgia"
                    android:fontFamily="@font/georgia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rb5"
                    android:text="@string/palatino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palatino_regular"/>
                <RadioButton
                    android:id="@+id/rb6"
                    android:text="@string/timesnewroman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_new_roman"/>

            </LinearLayout>
        </LinearLayout>
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/view_config_rl_boldlevel"
        android:layout_width="match_parent"
        android:layout_below="@id/view_config_radio_group"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/view_config_tv_boldlevel_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aa"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:fontFamily="@font/bookerly_regular"
            android:padding="10dp"
            android:layout_alignParentStart="true"/>


        <SeekBar
            android:id="@+id/view_config_seek_bar_bold_level"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/view_config_tv_boldlevel_end"
            android:layout_toEndOf="@id/view_config_tv_boldlevel_start"
            android:max="4"
            android:layout_centerVertical="true"
            android:padding="10dp" />

        <TextView
            android:id="@+id/view_config_tv_boldlevel_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aa"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:fontFamily="@font/bookerly_bold"
            android:padding="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_config_rl_fontsize"
        android:layout_width="match_parent"
        android:layout_below="@id/view_config_rl_boldlevel"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/view_config_tv_fontsize_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aa"
            android:textColor="@color/black"
            android:fontFamily="@font/bookerly_regular"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>


        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_config_seek_bar_fontsize"
            android:max="8"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/view_config_tv_fontsize_end"
            android:layout_toEndOf="@id/view_config_tv_fontsize_start"
            style="@style/Widget.AppCompat.SeekBar.Discrete"/>
        <TextView
            android:id="@+id/view_config_tv_fontsize_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aa"
            android:textColor="@color/black"
            android:fontFamily="@font/bookerly_regular"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_config_ll_page_bgcolor"
        android:layout_below="@id/view_config_rl_fontsize"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/view_config_btn_pacecolor_white"
            android:background="@color/white"
            android:text="White"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/view_config_btn_pacecolor_sepia"
            android:background="#e9b886"
            android:text="Sepia"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/view_config_btn_pacecolor_black"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_config_ll_intervalline"
        android:orientation="horizontal"
        android:weightSum="3">
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/view_config_ib_day_mode"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@+id/view_config_ib_night_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/icon_sun_sel"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/view_config_ib_night_mode"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_config_ib_day_mode"
            app:srcCompat="@drawable/icon_moon_sel"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_config_ib_night_mode" />

        <com.folioreader.ui.view.StyleableTextView
            android:id="@+id/view_config_font_andada"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/andada"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/view_config_font_lato"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <com.folioreader.ui.view.StyleableTextView
            android:id="@+id/view_config_font_lato"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/lato"
            android:textSize="17sp"
            app:folio_font="@string/lato_font"
            app:layout_constraintEnd_toStartOf="@+id/view_config_font_lora"
            app:layout_constraintStart_toEndOf="@+id/view_config_font_andada"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <com.folioreader.ui.view.StyleableTextView
            android:id="@+id/view_config_font_lora"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/lora"
            android:textSize="17sp"
            app:folio_font="@string/lora_font"
            app:layout_constraintEnd_toStartOf="@+id/view_config_font_raleway"
            app:layout_constraintStart_toEndOf="@+id/view_config_font_lato"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <com.folioreader.ui.view.StyleableTextView
            android:id="@+id/view_config_font_raleway"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/raleway"
            android:textSize="17sp"
            app:folio_font="@string/raleway_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_config_font_lora"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_config_font_lato" />

        <ImageView
            android:id="@+id/view_config_iv_label_font_small"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="false"
            android:scaleType="center"
            android:tint="@color/grey_color"
            app:layout_constraintBottom_toTopOf="@+id/view5"
            app:layout_constraintEnd_toStartOf="@+id/view_config_font_size_seek_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:srcCompat="@drawable/ic_format_font_black_24dp" />

        <ImageView
            android:id="@+id/view_config_iv_label_font_big"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:cropToPadding="false"
            android:scaleType="center"
            android:tint="@color/grey_color"
            app:layout_constraintBottom_toTopOf="@+id/view5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_config_font_size_seek_bar"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:srcCompat="@drawable/ic_format_font_black_36dp" />

        <SeekBar
            android:id="@+id/view_config_font_size_seek_bar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="4"
            app:layout_constraintBottom_toTopOf="@+id/view5"
            app:layout_constraintEnd_toStartOf="@+id/view_config_iv_label_font_big"
            app:layout_constraintStart_toEndOf="@+id/view_config_iv_label_font_small"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_color"
            app:layout_constraintBottom_toTopOf="@+id/buttonVertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_config_iv_label_font_small" />

        <com.folioreader.util.StyleableTextView
            android:id="@+id/buttonVertical"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/direction_vertical"
            android:textSize="17sp"
            app:folio_font="@string/lato_font"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonHorizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <com.folioreader.util.StyleableTextView
            android:id="@+id/buttonHorizontal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/direction_horizontal"
            android:textSize="17sp"
            app:folio_font="@string/lato_font"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonVertical"
            app:layout_constraintTop_toBottomOf="@+id/view5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
